@model List<string>
@{
    ViewData["Title"] = "ViewDepartments";
}

<h2>View Departments</h2>

@if (Model.Count > 0)
{
    <table class="table table-striped">
        <tr>
            <th>Departments</th>
        </tr>
        @foreach (var department in Model)
        {
            <tr>
                <th>@department</th>
            </tr>
        }
    </table>
}
else
{
    <div>
        There is no departments yet!
    </div>
}