@model EmployeeModel
@{
    ViewData["Title"] = "AddEmployee";
}

<h2>Add Employee</h2>

@Html.ValidationSummary()

<form class="form-horizontal" asp-controller="Employee" asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="Name" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" id="inputEmail3">
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Surname" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="Surname" class="form-control" id="inputEmail3">
        </div>
    </div>
    <div class="form-group">
        <label asp-for="BirthYear" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="BirthYear" class="form-control" id="inputEmail3">
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Position" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="Position" class="form-control" id="inputEmail3">
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Department" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="Department" class="form-control" id="inputEmail3">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Create</button>
        </div>
    </div>
</form>


