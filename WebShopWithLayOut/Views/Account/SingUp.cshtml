@model UserModel
@{
    ViewData["Title"] = "SingUp";
}

<h1>Create a new account!</h1>

@Html.ValidationSummary()

<form class="form-horizontal" asp-controller="Account" asp-action="SingUp" method="post">
    <div class="form-group">
        <label asp-for="EMail" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="EMail" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Password" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Password" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="PasswordRepeat" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="PasswordRepeat" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Name" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Name" />
        </div>
    </div>
    <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-primary">Sing Up</button>
    </div>
</form>