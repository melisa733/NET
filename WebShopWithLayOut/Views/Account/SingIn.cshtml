@model LoginModel
@{
    ViewData["Title"] = "SingIn";
}

<h1>Sing In</h1>

@Html.ValidationSummary()

<form class="form-horizontal" asp-controller="Account" asp-action="SingIn" method="post">
    <div class="form-group">
        <label asp-for="EMail" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="EMail" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Password" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Password" />
        </div>
    </div>
    <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-primary">Sing In</button>
    </div>
</form>