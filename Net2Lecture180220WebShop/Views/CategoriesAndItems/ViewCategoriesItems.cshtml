@model List<ItemModel>
@{
    ViewData["Title"] = "ViewCategoriesItems";
}

<h2>@Model[0].category</h2>

<table class="table table-striped">
    <tr>
        <th>#</th>
        <th>Name</th>
        <th>Description</th>
        <th>Price</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
<tr>
    <td></td>
    <td>@item.itemName</td>
    <td>@item.description</td>
    <td>@item.price</td>
    <td><a asp-controller="CategoriesAndItems" asp-action="ViewItem" asp-route-id="@item.ID">View Item</a></td>
</tr>
    }
</table>

<p><a asp-controller="CategoriesAndItems" asp-action="Categories" asp-route-id="">BACK</a></p>


