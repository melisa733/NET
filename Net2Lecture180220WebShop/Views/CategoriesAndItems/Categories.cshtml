@model List<Category>
@{
    ViewData["Title"] = "Categories";
}

<h2>Categories</h2>
<table class="table table-striped">
    <tr>
        <th>#</th>
        <th>Name</th>
        <th></th>
    </tr>
    @foreach (var category in Model)
    {
        <tr>
            <td>@category.ID</td>
            <td>@category.name</td>
            <td><a asp-controller="CategoriesAndItems"  asp-action="ViewCategoriesItems"  asp-route-id="@category.ID">View Products</a></td>
        </tr>
    }
</table>
