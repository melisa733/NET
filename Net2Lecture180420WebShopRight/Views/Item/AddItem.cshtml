@model ItemModel
@{
    ViewData["Title"] = "AddItem";
}

<h2>Add Item</h2>

@Html.ValidationSummary()

<form class="form-horizontal" asp-controller="Item" asp-action="AddItem" method="post">
    <div class="form-group">
        <label asp-for="Name" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" id="inputEmail3">
        </div>
    </div>
    <div class="form-group">
        <label asp-for="CategoryName" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="CategoryName" class="form-control" id="inputEmail3">
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Price" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="Price" class="form-control" id="inputEmail3">
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Location" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="Location" class="form-control" id="inputEmail3">
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="Description" class="form-control" id="inputEmail3">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Create</button>
        </div>
    </div>
</form>

