@model List<ItemModel>
@{
    ViewData["Title"] = "Items in Category";
}

<h2>Products in Category</h2>

<h2>Categories</h2>
@if (Model.Count > 0)
{
    <table class="table table-striped">
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Price</td>
                <td><a asp-controller="Item" asp-action="View" asp-route-id="@item.ID">View Products</a></td>
            </tr>
        }
    </table>
}
else { 
    <div>
        Šajā kategorijā nav preces!
    </div>
}
