@model StudentModel
@{
    ViewData["Title"] = "AddStudent";
}

<h2>Add Student</h2>

@Html.ValidationSummary()

<form class="form-horizontal" asp-controller="Student" asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="Name" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" id="inputEmail3">
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Surname" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="Surname" class="form-control" id="inputEmail3">
        </div>
    </div>
    <div class="form-group">
        <label asp-for="BirthDay" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="BirthDay" class="form-control" id="inputEmail3">
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Grade" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="Grade" class="form-control" id="inputEmail3">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Create</button>
        </div>
    </div>
</form>

