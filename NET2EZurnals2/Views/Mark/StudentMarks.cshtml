@model List<MarkModel>
@{
    ViewData["Title"] = "Student Marks";
}

<h2>Student Marks</h2>

@if (Model.Count == 0)
{
    <h3>There is no marks yet!</h3>
}
else
{
    <h3>@Model[0].StudentInQ.Name @Model[0].StudentInQ.Surname</h3>
    <table class="table table-striped">
        <tr>
            <td>Mark</td>
            <td>Subject</td>
            <td>Description</td>
        </tr>
        @foreach (var mark in Model)
        {
            <tr>
                <th>@mark.MarkForStudent</th>
                <th>@mark.SubjectInQ.Name</th>
                <th>@mark.Description</th>
            </tr>
        }
    </table>
}