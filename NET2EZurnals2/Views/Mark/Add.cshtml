@model MarkModel
@{
    ViewData["Title"] = "AddMark";
}

<h2>Add Mark</h2>

@Html.ValidationSummary()

<form class="form-horizontal" asp-controller="Mark" asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="StudentName" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="StudentName" class="form-control" id="inputEmail3">
        </div>
    </div>
    <div class="form-group">
        <label asp-for="StudentSurName" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="StudentSurName" class="form-control" id="inputEmail3">
        </div>
    </div>
    <div class="form-group">
        <label asp-for="SubjectName" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="SubjectName" class="form-control" id="inputEmail3">
        </div>
    </div>
    <div class="form-group">
        <label asp-for="MarkForStudent" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="MarkForStudent" class="form-control" id="inputEmail3">
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="Description" class="form-control" id="inputEmail3">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Create</button>
        </div>
    </div>
</form>