@model List<MarkModel>
@{
    ViewData["Title"] = "Marks";
}

<h2>Marks</h2>

@if (Model.Count == 0)
{
    <h3>There is no marks yet!</h3>
}
else
{
    <table class="table table-striped">
        <tr>
            <td>Mark</td>
            <td>Students Surname</td>
            <td>Students Name</td>
            <td>Subject</td>
            <td>Description</td>
        </tr>
        @foreach (var mark in Model) 
        { 
            <tr>
                <th>@mark.MarkForStudent</th>
                <th>@mark.StudentInQ.Surname</th>
                <th>@mark.StudentInQ.Name</th>
                <th>@mark.SubjectInQ.Name</th>
                <th>@mark.Description</th>
            </tr>
        }
    </table>
}
