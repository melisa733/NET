@model List<MarkModel>
@{
    ViewData["Title"] = "SubjectMarks";
}

<h2>Subject Marks</h2>

@if (Model.Count == 0)
{
    <h3>There is no marks yet!</h3>
}
else
{
    <h3>@Model[0].SubjectInQ.Name</h3>
    <table class="table table-striped">
        <tr>
            <td>Mark</td>
            <td>Student Name</td>
            <td>Student Surname</td>
            <td>Description</td>
        </tr>
        @foreach (var mark in Model)
        {
    <tr>
        <th>@mark.MarkForStudent</th>
        <td>@mark.StudentInQ.Name</td>
        <td>@mark.StudentInQ.Surname</td>
        <th>@mark.Description</th>
    </tr>
        }
    </table>
}