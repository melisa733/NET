@model List<SubjectModel>
@{
    ViewData["Title"] = "Subjects";
}

<h2>Subjects</h2>

@if (Model.Count == 0)
{
    <h3>There is no subjects yet!</h3>
}
else
{
<table class="table table-striped">
    <tr>
        <th>Name</th>
        <th></th>
    </tr>
    @foreach (var subject in Model)
    {
<tr>
    <td>@subject.Name</td>
    <th><a asp-controller="Mark" asp-action="SubjectMarks" asp-route-id="@subject.ID">View subject marks</a></th>
</tr>
    }
</table>
}
